@model IEnumerable<RestaurantMVC.Models.Restaurant>

<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/Restaurants.css">
<script src="https://code.jquery.com/jquery.min.js"></script>
<script src="~/Scripts/Restaurants.js"></script>

<div class="container">
    <div class="well well-sm">
        <strong>Display</strong>
        <div class="btn-group">
            <a href="#" id="list" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-th-list">
                </span>List
            </a> <a href="#" id="grid" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-th"></span>Grid
            </a>
        </div>
    </div>
    <div id="products" class="row list-group">
        @foreach (var restaurant in Model)
        { 
        <div class="item  col-xs-4 col-lg-4">
            <div class="thumbnail">
                <img class="group list-group-image" src="https://warriortradingnews.com/wp-content/uploads/2016/01/MCD-Logo.png" alt="" />
                <div class="caption">
                    <h4 class="group inner list-group-item-heading">
                        @restaurant.Name
                    </h4>
                    <p class="group inner list-group-item-text">
                        @restaurant.Address
                    </p>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead">
                                @restaurant.Rating
                            </p>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            @*<a class="btn btn-success" href="http://www.jquery2dotnet.com">Reviews</a>*@
                            @Html.ActionLink("Reviews", "Reviews", "Restaurant", new { list=restaurant.Reviews }, new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>
